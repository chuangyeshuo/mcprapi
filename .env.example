# ===========================================
# API多租户授权管理系统 - 环境变量配置
# ===========================================

# 应用配置
APP_ENV=production
APP_PORT=8081
LOG_LEVEL=info

# 端口配置
MYSQL_PORT=3306
REDIS_PORT=6379
BACKEND_PORT=8081
FRONTEND_PORT=8082

# MySQL数据库配置
MYSQL_ROOT_PASSWORD=lidi10
MYSQL_DATABASE=api_auth_dev
MYSQL_USER=mcprapi
MYSQL_PASSWORD=lidi10

# Redis配置
REDIS_PASSWORD=

# JWT安全配置
JWT_SECRET=

# CORS配置
CORS_ORIGINS=http://localhost:8082,http://localhost:3000,http://localhost:8081

# 限流配置
RATE_LIMIT=100

# 构建配置
BUILD_ENV=production
NODE_ENV=production
API_BASE_URL=http://localhost:8081

# 安全配置（生产环境建议修改）
ENCRYPTION_KEY=
SESSION_SECRET=

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 日志配置
LOG_FORMAT=json
LOG_OUTPUT=file

# 数据库连接池配置
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=3600

# Redis连接池配置
REDIS_MAX_IDLE=10
REDIS_MAX_ACTIVE=100
REDIS_IDLE_TIMEOUT=300

# 文件上传配置
MAX_UPLOAD_SIZE=10MB
UPLOAD_PATH=/app/uploads

# 邮件配置（可选）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@example.com